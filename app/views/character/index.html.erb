<h1>Listing Characters</h1>
<div class="vertical-menu">
  <a href="about/index" class="active">Home</a>
  <a href="/characters">Characters</a>
  <a href="/issues">Issues</a>
  <a href="/volumes">Volumes</a>
</div>

<p><%= link_to "Advanced Search", new_search_path %></p>

<%= form_tag characters_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= collection_select(:character, :id, Issue.all, :id, :name, include_blank: true) %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>First Appearance</th>
    <th></th>
  </tr>

  <% @characters.each do |c| %>
    <tr>
      <td><%= link_to c.name, c %></td>
      <td><%= c.issue.name %></td>
    </tr>
  <% end %>
</table>
<%= paginate @characters %>